<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColorblindExplanationActivity">

    <TextView
        android:id="@+id/Explanation1"
        android:layout_width="271dp"
        android:layout_height="94dp"
        android:layout_marginTop="128dp"
        android:text="We need to briefly assess your vision before you can begin, by giving you a brief colorblindness test."
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Explanation2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Explanation2"
        android:layout_width="269dp"
        android:layout_height="173dp"
        android:layout_marginBottom="16dp"
        android:text="For the next screens, please answer what number you see in the cirlce. If you do not see any number, choose &quot;I don't see any number&quot;. If you already know you are colorblind, please specify below which type colorblind you are."
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        tools:layout_editor_absoluteX="71dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:text="Start the Colorblindness Test"
        app:layout_constraintBottom_toTopOf="@+id/colorblindButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fullCBButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:text="I am complete colorblind (Cannot see any colors)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/colorblindButton"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="I am Red/Green or Blue/Yellow colorblind"
        app:layout_constraintBottom_toTopOf="@+id/fullCBButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColorblindExplanationActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="246dp"
        android:layout_height="90dp"
        android:text="We need to briefly assess your vision before you can begin, by giving you a brief colorblindness test."
        android:textAlignment="center"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="111dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="316dp"
        android:layout_height="85dp"
        android:text="For the next screens, please answer what number you see in the cirlce. If you do not see any number, choose &quot;I don't see any number&quot;. If you already know you are colorblind, please specify below which type colorblind you are."
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="219dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start the Colorblindness Test"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="341dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am Red/Green or Blue/Yellow colorblind"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="465dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am complete colorblind (Cannot see any colors)"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="573dp" />

</androidx.constraintlayout.widget.ConstraintLayout>